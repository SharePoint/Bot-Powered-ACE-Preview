{
    "$schema": "../../../tests.schema",
    "$kind": "Microsoft.SwitchCondition",
    "condition": "user.isVip",
    "default": [
        {
            "$kind": "Microsoft.SendActivity",
            "activity": "Who are you?"
        }
    ],
    "cases": [
        {
            "value": "true",
            "actions": [
                {
                    "$kind": "Microsoft.SendActivity",
                    "activity": "User is VIP"
                }
            ]
        },
        {
            "value": "false",
            "actions": [
                {
                    "$kind": "Microsoft.SendActivity",
                    "activity": "User is NOT VIP"
                }
            ]
        }
    ]
}