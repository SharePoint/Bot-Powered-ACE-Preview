{
    "$schema": "../../../tests.schema",
    "$kind": "Microsoft.Test.Script",
    "description": "Test HttpRequestMock Luis",
    "httpRequestMocks": [
        "httpluis.mock"
    ],
    "dialog": {
        "$kind": "Microsoft.AdaptiveDialog",
        "recognizer": {
            "$kind": "Microsoft.LuisRecognizer",
            "applicationId": "=settings.luis.test_en_us_lu",
            "endpointKey": "=settings.luis.endpointKey",
            "endpoint": "=settings.luis.endpoint",
            "predictionOptions": {
                "includeAPIResults": true
            }
        },
        "triggers": [
            {
                "$kind": "Microsoft.OnIntent",
                "intent": "Overwrite",
                "actions": [
                    {
                        "$kind": "Microsoft.SendActivity",
                        "activity": "${turn.recognized.score} ${turn.recognized.luisResult.query}"
                    },
                    {
                        "$kind": "Microsoft.BeginDialog",
                        "dialog": {
                            "$kind": "Microsoft.AdaptiveDialog",
                            "recognizer": {
                                "$kind": "Microsoft.LuisRecognizer",
                                "applicationId": "=settings.luis.test_en_us_lu",
                                "endpointKey": "=settings.luis.endpointKey",
                                "endpoint": "=settings.luis.endpoint"
                            },
                            "triggers": [
                                {
                                    "$kind": "Microsoft.OnBeginDialog",
                                    "actions": [
                                        {
                                            "$kind": "Microsoft.TextInput",
                                            "prompt": "Non overwrite?"
                                        }
                                    ]
                                },
                                {
                                    "$kind": "Microsoft.OnIntent",
                                    "intent": "NonOverwrite",
                                    "actions": [
                                        {
                                            "$kind": "Microsoft.SendActivity",
                                            "activity": "${turn.recognized.score} ${turn.recognized.luisResult}"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    },
    "script": [
        {
            "$kind": "Microsoft.Test.UserSays",
            "text": "overwrite"
        },
        {
            "$kind": "Microsoft.Test.AssertReply",
            "text": "0.9 overwrite"
        },
        {
            "$kind": "Microsoft.Test.AssertReply",
            "text": "Non overwrite?"
        },
        {
            "$kind": "Microsoft.Test.UserSays",
            "text": "nonoverwrite"
        },
        {
            "$kind": "Microsoft.Test.AssertReply",
            "text": "0.8"
        }
    ]
}